@model ReviewCreationBindingModel
@{
    ViewData["Title"] = "Create";
}

<h2>Write a Review</h2>
<form asp-area="Admin" asp-controller="Reviews" asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="UserName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Description"></label>
        <div class="col-sm-10">
            <textarea name="Description" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Rating"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Rating" />
            <span class="text-danger" asp-validation-for="Rating"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="Admin" asp-controller="Movies" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
