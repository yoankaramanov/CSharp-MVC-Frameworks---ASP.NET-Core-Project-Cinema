@model MovieCreationBindingModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create upcoming movie</h2>
<form asp-area="Admin" asp-controller="UpcomingMovies" asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Title"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Genre"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Genre" />
            <span class="text-danger" asp-validation-for="Genre"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Lenght"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Lenght" />
            <span class="text-danger" asp-validation-for="Lenght"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="ReleaseDate"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ReleaseDate" />
            <span class="text-danger" asp-validation-for="ReleaseDate"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Actors"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Actors" />
            <span class="text-danger" asp-validation-for="Actors"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Description"></label>
        <div class="col-sm-10">
            <textarea name="Description" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Director"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Director" />
            <span class="text-danger" asp-validation-for="Director"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="DirectorImageUrl"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="DirectorImageUrl" />
            <span class="text-danger" asp-validation-for="DirectorImageUrl"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="ImageUrl"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ImageUrl" />
            <span class="text-danger" asp-validation-for="ImageUrl"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="Admin" asp-controller="UpcomingMovies" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
