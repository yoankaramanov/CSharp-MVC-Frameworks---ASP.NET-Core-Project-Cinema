@page
@model Cinema.Web.Areas.Admin.Pages.Items.CreateModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add item</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea name="Description" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ImageUrl" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input asp-page-handler="AddItem" type="submit" class="btn btn-success" value="Add item">
            <input asp-page-handler="Cancel" type="submit" class="btn btn-outline-dark" value="Cancel">
        </div>
    </div>
</form>