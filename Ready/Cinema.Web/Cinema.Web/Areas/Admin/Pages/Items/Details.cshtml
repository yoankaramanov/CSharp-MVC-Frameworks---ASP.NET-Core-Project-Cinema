@page "{id}"
@model Cinema.Web.Areas.Admin.Pages.Items.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" width="400" height="300" alt="Cover image for @Model.Name" />
        </div>
        <div class="col-md-7">
            <h2>@Model.Name</h2>
            <h5>Price: @Model.Price</h5>
            <p>Description: @Model.Description</p>
            <br />
        </div>
        <form method="post">
            <input asp-page-handler="DeleteItem" asp-route-id="@Model.Id" type="submit" class="btn btn-success" value="Delete">
        </form>
    </div>
</div>