@using Microsoft.AspNetCore.Identity
@using Cinema.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@model IEnumerable<MovieConciseViewModel>

@{
    ViewData["Title"] = "upcoming Movies";
}






@if (SignInManager.IsSignedIn(User))
{
    <h2>Upcoming Movies</h2>

    @if (Model.Count() == 0)
    {
        <h3>None yet.</h3>
    }





    <div class="row">

        @Html.DisplayForModel()

    </div>


}
else
{
    <h1>Welcome to Paradise Cinema!</h1>
    <h3>Please <a asp-area="Identity" asp-controller="Account" asp-action="Login">login</a> or <a asp-area="Identity" asp-controller="Account" asp-action="Register">register</a> to proceed.</h3>
}




